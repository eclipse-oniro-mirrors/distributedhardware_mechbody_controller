import("//build/config/features.gni")
import("//build/ohos.gni")
import("//build/test.gni")
import(
    "//foundation/distributedhardware/mechbody_controller/mechbody.gni")

ohos_fuzztest("MechBodyControllerServiceFuzzTest") {
  module_out_path = "mechbody_controller/"
  mechbody_path =
      "//foundation/distributedhardware/mechbody_controller"
  fuzz_config_file =
      "${mechbody_path}/test/fuzztest/mechbodycontrollerservice_fuzzer"
  include_dirs = [
    "${mechbody_path}/services/include",
    "${mechbody_path}/services/include/connect",
    "${mechbody_path}/services/include/controller",
    "${mechbody_path}/services/include/motion",
    "${mechbody_path}/services/include/transport",
    "${mechbody_path}/services/include/transport/command",
    "${mechbody_path}/interface/inner_api",
  ]
  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]
  sources = [
    "${mechbody_path}/services/src/mechbody_controller_service.cpp",
    "${mechbody_path}/test/fuzztest/mechbodycontrollerservice_fuzzer/mechbodycontrollerservice_fuzzer.cpp",
  ]

  deps = [ "${mechbody_path}/services:mechbody_service" ]

  external_deps = [
    "access_token:libaccesstoken_sdk",
    "access_token:libtokenid_sdk",
    "access_token:libtokensetproc_shared",
    "bluetooth:btframework",
    "camera_framework:camera_framework",
    "cJSON:cjson_static",
    "c_utils:utils",
    "device_manager:devicemanagersdk",
    "eventhandler:libeventhandler",
    "graphic_surface:surface",
    "hilog:libhilog",
    "init:libbegetutil",
    "input:libmmi-client",
    "input:oh_input_manager",
    "ipc:ipc_single",
    "os_account:libaccountkits",
    "os_account:os_account_innerkits",
    "safwk:system_ability_fwk",
    "samgr:samgr_proxy",
    "selinux_adapter:librestorecon",
    "sensor:sensor_interface_native",
    "window_manager:libdm_lite",
  ]
}

group("fuzztest") {
  testonly = true
  deps = [ ":MechBodyControllerServiceFuzzTest" ]
}
